{
    "name": "Append To QueryString",
    "description": "Shows some of the features of the Context Menus API",
    "version": "0.6",
    "permissions": [
        "tabs", 
        "<all_urls>",
        "contextMenus",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}